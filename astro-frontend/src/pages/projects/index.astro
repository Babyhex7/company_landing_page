---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTA from '../components/sections/CTA.astro';
import { getProjects, getStrapiMediaUrl } from '../lib/strapi';

const projects = await getProjects();

// Default projects if Strapi is not available
const defaultProjects = [
  {
    title: 'E-Commerce Platform',
    description: 'A full-featured online marketplace with advanced filtering, real-time inventory management, and seamless payment integration.',
    category: { name: 'Web Development' },
    thumbnail: { url: null },
    slug: 'ecommerce-platform',
    technologies: ['Next.js', 'Stripe', 'PostgreSQL', 'Redis'],
    client: 'RetailMax'
  },
  {
    title: 'Healthcare Mobile App',
    description: 'Telemedicine application connecting patients with healthcare providers for virtual consultations.',
    category: { name: 'Mobile Apps' },
    thumbnail: { url: null },
    slug: 'healthcare-app',
    technologies: ['React Native', 'Node.js', 'MongoDB', 'WebRTC'],
    client: 'MedConnect'
  },
  {
    title: 'SaaS Analytics Dashboard',
    description: 'Business intelligence platform with real-time data visualization and automated reporting.',
    category: { name: 'SaaS' },
    thumbnail: { url: null },
    slug: 'saas-dashboard',
    technologies: ['React', 'D3.js', 'AWS', 'Python'],
    client: 'DataViz Inc'
  },
  {
    title: 'Real Estate Platform',
    description: 'Property listing website with virtual tours, booking system, and agent management.',
    category: { name: 'Web Development' },
    thumbnail: { url: null },
    slug: 'real-estate',
    technologies: ['Astro', 'Three.js', 'Supabase'],
    client: 'HomeFind'
  },
  {
    title: 'Fintech Mobile App',
    description: 'Digital banking application with secure transactions and investment tracking.',
    category: { name: 'Mobile Apps' },
    thumbnail: { url: null },
    slug: 'fintech-app',
    technologies: ['Flutter', 'Firebase', 'Plaid API'],
    client: 'NeoBank'
  },
  {
    title: 'EdTech Learning Platform',
    description: 'Online learning management system with interactive courses and progress tracking.',
    category: { name: 'E-commerce' },
    thumbnail: { url: null },
    slug: 'edtech-platform',
    technologies: ['Next.js', 'Prisma', 'Stripe', 'AWS'],
    client: 'LearnPro'
  }
];

const displayProjects = projects?.length ? projects : defaultProjects;

// Get unique categories
const categories = ['All', ...new Set(displayProjects.map((p: any) => p.category?.name || 'Other'))];
---

<BaseLayout 
  title="Our Projects - NexaTech" 
  description="Explore our portfolio of successful projects across web development, mobile apps, and digital solutions."
>
  <!-- Hero Section -->
  <section class="pt-40 pb-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <span class="animate-fade-up inline-block text-indigo-400 font-semibold mb-4">Our Portfolio</span>
        <h1 class="animate-fade-up delay-100 text-display font-bold text-white mb-6">
          Projects That <span class="gradient-text">Inspire</span>
        </h1>
        <p class="animate-fade-up delay-200 text-xl text-slate-400 leading-relaxed">
          A showcase of our best work across various industries and technologies.
        </p>
      </div>
    </div>
  </section>

  <!-- Filter Tabs -->
  <section class="pb-8">
    <div class="container mx-auto px-6">
      <div class="animate-fade-up flex flex-wrap justify-center gap-3">
        {categories.map((category, index) => (
          <button 
            class={`filter-btn px-6 py-2.5 rounded-full font-medium transition-all ${index === 0 ? 'bg-indigo-500 text-white' : 'bg-slate-800/50 text-slate-400 hover:bg-slate-700/50 hover:text-white'}`}
            data-category={category}
          >
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="section pt-8">
    <div class="container mx-auto px-6">
      <div id="projects-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {displayProjects.map((project: any, index: number) => (
          <a 
            href={`/projects/${project.slug}`}
            class={`animate-fade-up delay-${(index % 3 + 1) * 100} project-card group relative rounded-3xl overflow-hidden`}
            data-category={project.category?.name || 'Other'}
          >
            <!-- Project Image -->
            <div class="aspect-[4/3] bg-slate-800 relative overflow-hidden">
              {project.thumbnail?.url ? (
                <img 
                  src={getStrapiMediaUrl(project.thumbnail.url)}
                  alt={project.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                />
              ) : (
                <div class="w-full h-full bg-gradient-to-br from-indigo-500/20 via-purple-500/20 to-cyan-500/20 flex items-center justify-center">
                  <div class="text-5xl opacity-50">ðŸ’¼</div>
                </div>
              )}
              
              <!-- Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/40 to-transparent opacity-80"></div>
              
              <!-- Category Badge -->
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 rounded-full bg-indigo-500/20 border border-indigo-500/30 text-indigo-300 text-xs font-medium backdrop-blur-sm">
                  {project.category?.name || 'Project'}
                </span>
              </div>

              <!-- Content -->
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <h3 class="text-xl font-bold text-white mb-2 group-hover:text-indigo-400 transition-colors">
                  {project.title}
                </h3>
                <p class="text-slate-300 text-sm line-clamp-2 mb-3">
                  {project.description}
                </p>
                
                <!-- Technologies -->
                {project.technologies && (
                  <div class="flex flex-wrap gap-1.5">
                    {project.technologies.slice(0, 3).map((tech: string) => (
                      <span class="px-2 py-0.5 rounded-full bg-slate-800/70 text-slate-400 text-xs">
                        {tech}
                      </span>
                    ))}
                    {project.technologies.length > 3 && (
                      <span class="px-2 py-0.5 rounded-full bg-slate-800/70 text-slate-400 text-xs">
                        +{project.technologies.length - 3}
                      </span>
                    )}
                  </div>
                )}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTA />
</BaseLayout>

<script>
  // Filter functionality
  const filterBtns = document.querySelectorAll('.filter-btn');
  const projectCards = document.querySelectorAll('.project-card');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Update active button
      filterBtns.forEach(b => {
        b.classList.remove('bg-indigo-500', 'text-white');
        b.classList.add('bg-slate-800/50', 'text-slate-400');
      });
      btn.classList.remove('bg-slate-800/50', 'text-slate-400');
      btn.classList.add('bg-indigo-500', 'text-white');

      // Filter projects
      const category = btn.getAttribute('data-category');
      
      projectCards.forEach(card => {
        const cardCategory = card.getAttribute('data-category');
        const htmlCard = card as HTMLElement;
        
        if (category === 'All' || cardCategory === category) {
          htmlCard.style.display = 'block';
        } else {
          htmlCard.style.display = 'none';
        }
      });
    });
  });
</script>
