---
import BaseLayout from '../layouts/BaseLayout.astro';
import Team from '../components/sections/Team.astro';
import Clients from '../components/sections/Clients.astro';
import CTA from '../components/sections/CTA.astro';
import { getAboutPage } from '../lib/strapi';

const aboutData = await getAboutPage();

const stats = [
  { value: '150+', label: 'Projects Completed' },
  { value: '50+', label: 'Happy Clients' },
  { value: '15+', label: 'Team Members' },
  { value: '5+', label: 'Years Experience' }
];

const values = [
  {
    icon: 'üéØ',
    title: 'Excellence',
    description: 'We strive for excellence in every project, delivering solutions that exceed expectations.'
  },
  {
    icon: 'ü§ù',
    title: 'Collaboration',
    description: 'We believe in working closely with our clients to achieve the best possible outcomes.'
  },
  {
    icon: 'üí°',
    title: 'Innovation',
    description: 'We embrace new technologies and creative approaches to solve complex problems.'
  },
  {
    icon: 'üîí',
    title: 'Integrity',
    description: 'We maintain the highest ethical standards and transparency in all our dealings.'
  }
];
---

<BaseLayout 
  title="About Us - NexaTech" 
  description="Learn about NexaTech, our mission, values, and the team behind our success."
>
  <!-- Hero Section -->
  <section class="pt-40 pb-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <span class="animate-fade-up inline-block text-indigo-400 font-semibold mb-4">About Us</span>
        <h1 class="animate-fade-up delay-100 text-display font-bold text-white mb-6">
          We're a Team of <span class="gradient-text">Passionate</span> Builders
        </h1>
        <p class="animate-fade-up delay-200 text-xl text-slate-400 leading-relaxed">
          {aboutData?.description || 
            "Founded with a vision to transform how businesses operate in the digital world, we've grown into a team of experts dedicated to delivering exceptional digital solutions."}
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16">
    <div class="container mx-auto px-6">
      <div class="animate-fade-up glass-card p-8 md:p-12">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {stats.map((stat) => (
            <div class="text-center">
              <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">{stat.value}</div>
              <div class="text-slate-400">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="section">
    <div class="container mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="animate-fade-up inline-block text-indigo-400 font-semibold mb-4">Our Story</span>
          <h2 class="animate-fade-up delay-100 text-heading font-bold text-white mb-6">
            From Startup to <span class="gradient-text">Industry Leader</span>
          </h2>
          <div class="animate-fade-up delay-200 space-y-4 text-slate-400 leading-relaxed">
            <p>
              {aboutData?.story || 
                "NexaTech was founded in 2019 by a group of passionate developers who saw the need for a different approach to digital solutions. We believed that technology should be accessible, beautiful, and powerful."}
            </p>
            <p>
              Over the years, we've had the privilege of working with startups, SMEs, and enterprise clients across various industries. Each project has taught us something new and helped us refine our craft.
            </p>
            <p>
              Today, we're proud to be recognized as a leading digital agency, known for our innovative solutions, exceptional quality, and commitment to client success.
            </p>
          </div>
        </div>
        <div class="animate-fade-up delay-300 relative">
          <div class="aspect-square rounded-3xl bg-gradient-to-br from-indigo-500/20 via-purple-500/20 to-cyan-500/20 flex items-center justify-center">
            <div class="text-center">
              <div class="text-8xl mb-4">üöÄ</div>
              <p class="text-2xl font-bold gradient-text">Since 2019</p>
            </div>
          </div>
          <div class="absolute -top-4 -right-4 w-24 h-24 rounded-2xl bg-indigo-500/20 border border-indigo-500/30"></div>
          <div class="absolute -bottom-4 -left-4 w-32 h-32 rounded-2xl bg-purple-500/20 border border-purple-500/30"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="section">
    <div class="container mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="animate-fade-up inline-block text-indigo-400 font-semibold mb-4">Our Values</span>
        <h2 class="animate-fade-up delay-100 text-heading font-bold text-white mb-6">
          What <span class="gradient-text">Drives</span> Us
        </h2>
        <p class="animate-fade-up delay-200 text-lg text-slate-400">
          Our core values guide every decision we make and every project we undertake.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((value, index) => (
          <div class={`animate-fade-up delay-${(index + 1) * 100} card text-center`}>
            <div class="text-5xl mb-4">{value.icon}</div>
            <h3 class="text-xl font-bold text-white mb-2">{value.title}</h3>
            <p class="text-slate-400">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Team />
  <Clients />
  <CTA />
</BaseLayout>
