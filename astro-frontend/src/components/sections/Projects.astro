---
// Projects/Portfolio Section Component
import { getFeaturedProjects, getStrapiMediaUrl } from '../../lib/strapi';

const projects = await getFeaturedProjects();

// Default projects if Strapi is not available
const defaultProjects = [
  {
    title: 'E-Commerce Platform',
    description: 'A full-featured online marketplace with advanced filtering and payment integration.',
    category: { name: 'Web Development' },
    thumbnail: { url: null },
    slug: 'ecommerce-platform',
    technologies: ['Next.js', 'Stripe', 'PostgreSQL']
  },
  {
    title: 'Healthcare Mobile App',
    description: 'Telemedicine application connecting patients with healthcare providers.',
    category: { name: 'Mobile Apps' },
    thumbnail: { url: null },
    slug: 'healthcare-app',
    technologies: ['React Native', 'Node.js', 'MongoDB']
  },
  {
    title: 'SaaS Dashboard',
    description: 'Analytics dashboard for business intelligence and data visualization.',
    category: { name: 'SaaS' },
    thumbnail: { url: null },
    slug: 'saas-dashboard',
    technologies: ['React', 'D3.js', 'AWS']
  },
  {
    title: 'Real Estate Platform',
    description: 'Property listing platform with virtual tours and booking system.',
    category: { name: 'Web Development' },
    thumbnail: { url: null },
    slug: 'real-estate',
    technologies: ['Astro', 'Three.js', 'Supabase']
  }
];

const displayProjects = projects?.length ? projects : defaultProjects;
---

<section id="projects" class="section relative">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="flex flex-col md:flex-row items-start md:items-end justify-between gap-6 mb-16">
      <div class="max-w-2xl">
        <span class="animate-fade-up inline-block text-indigo-400 font-semibold mb-4">Featured Projects</span>
        <h2 class="animate-fade-up delay-100 text-heading font-bold text-white mb-4">
          Our Latest <span class="gradient-text">Work</span>
        </h2>
        <p class="animate-fade-up delay-200 text-lg text-slate-400">
          Explore our portfolio of successful projects that showcase our expertise and creativity.
        </p>
      </div>
      <a href="/projects" class="animate-fade-up delay-300 btn btn-secondary">
        View All Projects
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {displayProjects.map((project: any, index: number) => (
        <a 
          href={`/projects/${project.slug}`}
          class={`animate-fade-up delay-${(index % 2 + 1) * 100} group relative rounded-3xl overflow-hidden`}
        >
          <!-- Project Image -->
          <div class="aspect-[16/10] bg-slate-800 relative overflow-hidden">
            {project.thumbnail?.url ? (
              <img 
                src={getStrapiMediaUrl(project.thumbnail.url)}
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
              />
            ) : (
              <div class="w-full h-full bg-gradient-to-br from-indigo-500/20 via-purple-500/20 to-cyan-500/20 flex items-center justify-center">
                <div class="text-6xl opacity-50">ðŸš€</div>
              </div>
            )}
            
            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/50 to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
            
            <!-- Category Badge -->
            <div class="absolute top-6 left-6">
              <span class="px-4 py-1.5 rounded-full bg-indigo-500/20 border border-indigo-500/30 text-indigo-300 text-sm font-medium backdrop-blur-sm">
                {project.category?.name || 'Project'}
              </span>
            </div>

            <!-- Content -->
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-indigo-400 transition-colors">
                {project.title}
              </h3>
              <p class="text-slate-300 line-clamp-2 mb-4">
                {project.description}
              </p>
              
              <!-- Technologies -->
              {project.technologies && (
                <div class="flex flex-wrap gap-2">
                  {project.technologies.slice(0, 3).map((tech: string) => (
                    <span class="px-3 py-1 rounded-full bg-slate-800/50 text-slate-400 text-sm">
                      {tech}
                    </span>
                  ))}
                </div>
              )}

              <!-- Arrow Icon -->
              <div class="absolute bottom-8 right-8 w-12 h-12 rounded-full bg-indigo-500 flex items-center justify-center opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
