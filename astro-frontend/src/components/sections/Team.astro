---
// Team Section Component
import { getTeamMembers, getStrapiMediaUrl } from '../../lib/strapi';

const teamMembers = await getTeamMembers();

// Default team if Strapi is not available
const defaultTeam = [
  {
    name: 'Alex Thompson',
    role: 'CEO & Founder',
    bio: 'Visionary leader with 10+ years in tech industry.',
    image: { url: null },
    social: { linkedin: '#', twitter: '#', github: '#' }
  },
  {
    name: 'Sarah Chen',
    role: 'Lead Designer',
    bio: 'Creative mind behind our stunning interfaces.',
    image: { url: null },
    social: { linkedin: '#', dribbble: '#' }
  },
  {
    name: 'Marcus Johnson',
    role: 'Tech Lead',
    bio: 'Full-stack architect with expertise in cloud solutions.',
    image: { url: null },
    social: { linkedin: '#', github: '#' }
  },
  {
    name: 'Emily Parker',
    role: 'Product Manager',
    bio: 'Bridging the gap between vision and execution.',
    image: { url: null },
    social: { linkedin: '#', twitter: '#' }
  }
];

const displayTeam = teamMembers?.length ? teamMembers : defaultTeam;
---

<section id="team" class="section relative">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="animate-fade-up inline-block text-indigo-400 font-semibold mb-4">Our Team</span>
      <h2 class="animate-fade-up delay-100 text-heading font-bold text-white mb-6">
        Meet the <span class="gradient-text">Experts</span>
      </h2>
      <p class="animate-fade-up delay-200 text-lg text-slate-400">
        Our talented team brings together diverse skills and experiences to deliver exceptional results.
      </p>
    </div>

    <!-- Team Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {displayTeam.map((member: any, index: number) => (
        <div class={`animate-fade-up delay-${(index % 4 + 1) * 100} group text-center`}>
          <!-- Avatar -->
          <div class="relative w-48 h-48 mx-auto mb-6">
            <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-indigo-500 via-purple-500 to-cyan-500 opacity-0 group-hover:opacity-100 blur-xl transition-opacity duration-500"></div>
            <div class="relative w-full h-full rounded-3xl overflow-hidden border-2 border-slate-700 group-hover:border-indigo-500/50 transition-colors">
              {member.image?.url ? (
                <img 
                  src={getStrapiMediaUrl(member.image.url)}
                  alt={member.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
              ) : (
                <div class="w-full h-full bg-gradient-to-br from-slate-800 to-slate-900 flex items-center justify-center">
                  <span class="text-5xl font-bold gradient-text">
                    {member.name.charAt(0)}
                  </span>
                </div>
              )}
            </div>
          </div>

          <!-- Info -->
          <h3 class="text-xl font-bold text-white mb-1 group-hover:text-indigo-400 transition-colors">
            {member.name}
          </h3>
          <p class="text-indigo-400 font-medium mb-3">{member.role}</p>
          <p class="text-slate-400 text-sm mb-4">{member.bio}</p>

          <!-- Social Links -->
          <div class="flex justify-center gap-3">
            {member.social?.linkedin && (
              <a 
                href={member.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 rounded-xl bg-slate-800 hover:bg-indigo-500/20 flex items-center justify-center text-slate-400 hover:text-indigo-400 transition-all"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
            {member.social?.twitter && (
              <a 
                href={member.social.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 rounded-xl bg-slate-800 hover:bg-indigo-500/20 flex items-center justify-center text-slate-400 hover:text-indigo-400 transition-all"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            )}
            {member.social?.github && (
              <a 
                href={member.social.github}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 rounded-xl bg-slate-800 hover:bg-indigo-500/20 flex items-center justify-center text-slate-400 hover:text-indigo-400 transition-all"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
